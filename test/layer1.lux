extern "C"
    fn printf(fmt: *Char, ...) -> Int

fn test_bool() -> Int
    let x: Bool = true
    let y: Bool = false
    if x
        printf("bool true: OK\n")
    if not y
        printf("bool false: OK\n")
    return 0

fn test_elif() -> Int
    let x = 2
    if x == 1
        printf("elif: FAIL\n")
    elif x == 2
        printf("elif: OK\n")
    elif x == 3
        printf("elif: FAIL\n")
    else
        printf("elif: FAIL\n")
    return 0

fn test_bitwise() -> Int
    let a = 0xFF
    let b = 0x0F
    let c = a & b
    let d = a | b
    let e = a ^ b
    let f = 1 << 4
    let g = 32 >> 2
    let h = ~0
    printf("bitwise AND: %d\n", c)
    printf("bitwise OR: %d\n", d)
    printf("bitwise XOR: %d\n", e)
    printf("shift left: %d\n", f)
    printf("shift right: %d\n", g)
    printf("bitwise NOT 0: %d\n", h)
    return 0

fn test_compound() -> Int
    var x = 10
    x += 5
    printf("+=: %d\n", x)
    x -= 3
    printf("-=: %d\n", x)
    x *= 2
    printf("*=: %d\n", x)
    x /= 3
    printf("/=: %d\n", x)
    x %= 3
    printf("%%=: %d\n", x)
    return 0

fn main() -> Int
    test_bool()
    test_elif()
    test_bitwise()
    test_compound()
    return 0
